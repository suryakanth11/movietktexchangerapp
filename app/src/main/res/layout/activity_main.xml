<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="in.co.msk.movie2tkt.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="MOVIE2TKT!"
        android:textSize="30dp"

        android:fontFamily="cursive"
        android:textColor="#CD764D"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="SELL YOUR TICKETS"
        android:textSize="20dp"
        android:layout_marginTop="70dp"
        android:id="@+id/xch"
        android:fontFamily="sans-serif-smallcaps"
        android:background="#49C993"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="VIEW ALL TICKETS"
        android:textSize="20dp"
        android:layout_marginTop="60dp"
        android:id="@+id/vie"
        android:fontFamily="sans-serif-smallcaps"
        android:background="#49C993"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="SEARCH FOR SPECIFIC MOVIE"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:fontFamily="sans-serif-smallcaps"
        android:background="#49C993"
        android:id="@+id/spc"/>

</LinearLayout>
